@import url('http://fonts.googleapis.com/css?family=Lato:300,400,700');


body {
	background: #34495e;
	font-family: 'Lato', Arial, sans-serif;
	color: #fff;
	margin: 0 auto;
	padding: 0px 10px;
}

h1 {
	margin: 0 auto;
	background: rgba(0,0,0,0.05);
	font-size: 3.2em;
	margin: 0;
	font-weight: 300;
	text-align: center;
}

h1 a {
	color: #566473;
	text-decoration: none;
	outline: none;
}

h1 a:hover {
	color: #4f7bab;
}

h1 span {
	display: block;
	font-size: 55%;
	color: #74818e;
	padding: 0 0 0.6em 0.1em;
}

input {
	outline: 0;
}


.container {
	width: 100%;
}

.main-content {
	margin-top:60px;
	width: 100%;
}

#inputfield {
	max-width: 600px;
	padding: 0px 10px;
	width: 100%;
	margin: 0 auto;
}

#map-canvas {
	height:400px; 
	max-width:1000px;
	margin: 0 auto;
}

.destination {
	max-width: 530px;
	width: 100%;
	height: 60px;
	margin: 0 auto;
	border-radius: 0px;
	border: 0;
	padding: 5px 15px;
	font-size: 22px;
	font-weight: 100;
	color: #4d4d4d;
	font-family: 'Lato', Arial, sans-serif;
	display: inline-block;
}

#findp {
	display: inline-block;
	font-size: 36px;
	text-align: center;
	vertical-align: middle;
	transform: rotate(-90deg);
}

@media (min-width: 768px) {

}

@media (max-width: 767px) {
#gn-menu li:last-child {
	display: none;
}

}


#address {
	color: #f4f4f4;
}

.tab-content > .tab-pane {
  display: none;
}
.tab-content > .active {
  display: block;
}
  
#gn-menu{
  position: absolute;
  z-index: 2000;
  width: 100%;
  top: 0px;
}

.content{
  right: 40px;
  left: 280px;
  top: 0px;
  position: absolute;
  padding-bottom: 30px;
}

.panel{
  width: 100%;
  min-height: 250px;
  position: absolute;
  margin-left: -102%;
  z-index:2;
  -webkit-transition: all .6s ease-in-out;
  -moz-transition: all .6s ease-in-out;
  -o-transition: all .6s ease-in-out;
  -ms-transition: all .6s ease-in-out;
  transition: all .6s ease-in-out;
}
.panel:target{
  margin-left: 0%;
}

